<div class="mx-auto text-center">
  <% @blog_posts.each do |blog_post| %>
    <div class="mx-auto text-left bg-white rounded-lg shadow-lg p-4 hover:bg-gray-100 transition-colors duration-200">
      <h1 class="text-2xl font-bold mb-4"><%= link_to blog_post.title, blog_post %></h1>

      <% if blog_post.draft? %>
        <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
      <% elsif blog_post.scheduled? %>
        <div class="p-2 rounded bg-blue-100 text-gray-900">Scheduled</div>
      <% end %>

      <div>
        <h3><%= blog_post.content %></h3>
      </div>
    </div>
    <hr class="mt-4 border-black">
  <% end %>

  <div class="mt-16">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
